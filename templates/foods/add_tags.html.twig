{% extends 'base.html.twig' %}

{% block title %}{{ 'food_add_tags.title'|trans }}{% endblock %}

{% block body %}
    <div class="max-w-2xl mx-auto mt-16 bg-[#3b3b3e] p-8 rounded-xl shadow-lg">
        <h1 class="text-3xl font-bold text-white text-center mb-8">{{ 'food_add_tags.heading'|trans }} {{ food.name }}</h1>

        <form method="POST" action="{{ path('food_add_tags', { id: food.id }) }}" class="space-y-6">
            <!-- Liste des tags -->
            <div class="flex flex-col space-y-2">
                {% for tag in tags %}
                    <label class="flex items-center space-x-2 text-white">
                        <input
                                type="checkbox"
                                name="tags[]"
                                value="{{ tag.id }}"
                                class="h-5 w-5 accent-violet-600"
                        >
                        <span>{{ tag.name }}</span>
                    </label>
                {% else %}
                    <p class="text-gray-400 text-center">{{ 'food_add_tags.no_tags'|trans }}</p>
                {% endfor %}
            </div>

            <!-- Bouton d'ajout -->
            <button type="submit" class="w-full bg-violet-600 hover:bg-violet-700 text-white font-bold py-3 px-6 rounded-lg shadow-md transition duration-300">
                {{ 'food_add_tags.add_tags_button'|trans }}
            </button>
        </form>
    </div>
{% endblock %}
