{# templates/foods/create.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Créer un Food{% endblock %}

{% block body %}
    <div class="max-w-lg mx-auto my-8 bg-white rounded-lg shadow p-6">
        <h1 class="text-2xl font-bold mb-4">Créer un Food</h1>

        {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
        <div>
            {{ form_label(form.name, 'Nom du Food', {'label_attr': {'class': 'block mb-2 font-medium text-gray-700'}}) }}
            {{ form_widget(form.name, {
                'attr': {
                    'class': 'w-full border border-gray-300 p-2 rounded focus:outline-none focus:border-blue-500'
                }
            }) }}
        </div>

        <button
                type="submit"
                class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded"
        >
            Créer
        </button>
        {{ form_end(form) }}
    </div>
{% endblock %}
