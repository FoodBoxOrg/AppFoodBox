{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-gray-100">
        <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">

            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4">
                    {{ flash_error }}
                </div>
            {% endfor %}

            <h1 class="text-2xl font-semibold text-gray-700 text-center mb-6">Inscription</h1>

            {{ form_start(registrationForm, { attr: { class: 'space-y-4' } }) }}

            {# Affichage des erreurs globales #}
            {% if registrationForm.vars.errors|length > 0 %}
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
                    {{ form_errors(registrationForm) }}
                </div>
            {% endif %}

            <div>
                <label for="{{ registrationForm.email.vars.id }}" class="block text-sm font-medium text-gray-700">Email</label>
                {{ form_widget(registrationForm.email, { attr: { class: 'mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500' } }) }}
                <p class="text-red-500 text-sm mt-1">
                    {% for error in registrationForm.email.vars.errors %}
                        <span class="block">{{ error.message }}</span>
                    {% endfor %}
                </p>
            </div>

            <div>
                <label for="{{ registrationForm.username.vars.id }}" class="block text-sm font-medium text-gray-700">Nom d'utilisateur</label>
                {{ form_widget(registrationForm.username, { attr: { class: 'mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500' } }) }}
                <p class="text-red-500 text-sm mt-1">
                    {% for error in registrationForm.username.vars.errors %}
                        <span class="block">{{ error.message }}</span>
                    {% endfor %}
                </p>
            </div>

            <div>
                <label for="{{ registrationForm.plainPassword.vars.id }}" class="block text-sm font-medium text-gray-700">Mot de passe</label>
                {{ form_widget(registrationForm.plainPassword, { attr: { class: 'mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500' } }) }}
                <p class="text-red-500 text-sm mt-1">
                    {% for error in registrationForm.plainPassword.vars.errors %}
                        <span class="block">{{ error.message }}</span>
                    {% endfor %}
                </p>
            </div>

            <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded-lg hover:bg-blue-600">
                S'inscrire
            </button>

            {{ form_end(registrationForm) }}

            <div class="mt-4 text-center">
                <p class="text-gray-600">Déjà un compte ?</p>
                <a href="{{ path('app_login') }}" class="text-blue-700 px-4 py-2 hover:text-blue-900">
                    Se connecter
                </a>
            </div>
        </div>
    </div>
{% endblock %}
