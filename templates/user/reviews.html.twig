{% extends 'base.html.twig' %}

{% block title %}
    Mes reviews - FoodBox
{% endblock %}

{% block body %}
    <!-- Conteneur principal -->
    <div class="max-w-4xl mx-auto bg-[#3b3b3e] text-white p-8 rounded-lg shadow-md">
        <h1 class="text-3xl font-bold mb-4">Mes reviews</h1>

        <!-- Informations globales -->
        <div class="flex flex-col md:flex-row md:justify-between items-start md:items-center gap-y-4 mb-6">
            <p class="text-gray-200">
                <span class="font-semibold">Nombre de reviews :</span> {{ reviews_count }}
            </p>
            <p class="text-gray-200">
                <span class="font-semibold">Moyenne :</span> {{ average }} ⭐️
            </p>
        </div>

        <!-- Liste des reviews -->
        {% if reviews is not empty %}
            <!-- Grid à 2 colonnes sur écrans md+ -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                {% for review in reviews %}
                    <div class="bg-[#2f2f33] rounded-md shadow p-4 hover:bg-[#4a4a4e] transition-colors duration-300">
                        <h2 class="text-xl text-white font-semibold mb-2">{{ review.food.name }}</h2>
                        <p class="text-yellow-300 mb-2">Note : {{ review.rate }} ⭐️</p>
                        <p class="text-gray-200">{{ review.comment }}</p>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p class="text-gray-300">Aucune review à afficher.</p>
        {% endif %}
    </div>
{% endblock %}
