{% extends 'base.html.twig' %}

{% block title %}{{ 'food_review.title'|trans({'food_name': food.name}) }}{% endblock %}

{% block body %}
    <!-- Conteneur pour centrer la "carte" -->
    <div class="flex justify-center mt-12">
        <!-- Carte avec couleur de fond gris foncÃ© (similaire au nav), texte blanc -->
        <div class="bg-[#3b3b3e] text-white p-6 rounded-lg shadow-md w-full max-w-md">
            <h1 class="text-2xl font-bold mb-4 text-center">
                {{ 'food_review.heading'|trans }} :
                <span class="text-gray-300">{{ food.name }}</span>
            </h1>

            <form method="POST" action="" class="space-y-6">
                <!-- Slider pour la note -->
                <div>
                    <label for="rate" class="block mb-2 font-medium text-gray-200">{{ 'food_review.rate_label'|trans }}</label>
                    <input
                            type="range"
                            id="rate"
                            name="rate"
                            min="1"
                            max="5"
                            value="3"
                            step="1"
                            class="w-full"
                    >
                </div>

                <!-- Champ commentaire -->
                <div>
                    <label for="comment" class="block mb-2 font-medium text-gray-200">{{ 'food_review.comment_label'|trans }}</label>
                    <textarea
                            id="comment"
                            name="comment"
                            rows="3"
                            class="w-full border border-gray-300 p-2 rounded focus:outline-none focus:border-blue-500 text-stone-100 bg-[#3b3b3e]"
                    ></textarea>
                </div>

                <!-- Bouton d'envoi -->
                <button
                        type="submit"
                        class="bg-[#945be3] hover:bg-violet-600 text-white font-semibold py-2 px-4 rounded transition"
                >
                    {{ 'food_review.submit_button'|trans }}
                </button>
            </form>
        </div>
    </div>
{% endblock %}
