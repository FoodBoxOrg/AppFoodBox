{% extends 'base.html.twig' %}

{% block title %}{{ food.name }} - D√©tails{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto bg-[#3b3b3e] text-white p-8 rounded-lg shadow-lg mt-12">
        <!-- Titre -->
        <h1 class="text-4xl font-bold mb-4">{{ food.name }}</h1>

        <!-- Origine -->
        {% if food.origin is not null %}
            <p class="text-lg text-gray-300 mb-4">üåç Origine : <span class="font-semibold">{{ food.origin }}</span></p>
        {% endif %}

        <!-- Section Description -->
        <div class="bg-gray-800 p-6 rounded-lg shadow-md mb-6">
            <h2 class="text-2xl font-semibold text-white mb-2">üìú Description - par Mistral Ai !</h2>
            <p class="text-gray-300 text-lg leading-relaxed">
                {{ description is not empty ? description : "Aucune description disponible pour ce plat." }}
            </p>
        </div>

        <!-- Section Avis -->
        <div class="border-t border-gray-500 pt-6">
            <h2 class="text-3xl font-semibold text-white mb-4">Avis des utilisateurs</h2>

            <!-- Bouton Ajouter une review -->
            <div class="mb-6">
                <a href="{{ path('food_review', { id: food.id }) }}"
                   class="inline-block px-6 py-3 bg-violet-600 text-white font-semibold rounded-lg shadow-md hover:bg-violet-700 transition-transform transform hover:scale-105">
                    ‚ûï Ajouter un avis
                </a>
            </div>

            <!-- Statistiques des avis -->
            <div class="mb-6 p-4 bg-gray-800 rounded-lg shadow">
                <p class="text-lg text-gray-200">
                    <span class="font-semibold">üìù Nombre de reviews :</span> {{ reviews_count }}
                </p>
                <p class="text-lg text-gray-200">
                    <span class="font-semibold">‚≠ê Moyenne des avis :</span> {{ average }} / 5
                </p>
            </div>

            <!-- Liste des avis -->
            {% if reviews is not empty %}
                <ul class="space-y-6">
                    {% for review in reviews %}
                        <li class="p-6 rounded-lg bg-gray-700 shadow-lg hover:shadow-xl transition-shadow duration-300">
                            <div class="flex items-center mb-4">
                                <!-- Avatar -->
                                <img src="https://ui-avatars.com/api/?background=945be3&color=fff&name={{ review.user.username }}"
                                     alt="{{ review.user.username }}" class="w-12 h-12 rounded-full object-cover shadow-md">

                                <div class="ml-4">
                                    <p class="font-semibold text-xl text-white">{{ review.user.username }}</p>
                                    <p class="text-yellow-400 text-lg">{{ review.rate }} ‚≠êÔ∏è</p>
                                </div>
                            </div>
                            <p class="text-gray-300 italic">
                                "{{ review.comment }}"
                            </p>
                        </li>
                    {% endfor %}
                </ul>
            {% else %}
                <p class="text-gray-400 text-center mt-4">üòï Aucun avis disponible pour ce plat.</p>
            {% endif %}
        </div>
    </div>
{% endblock %}
